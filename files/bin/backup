#!/bin/bash

REAL_HN=${REAL_HN:-$HOSTNAME}
ENV=${ENV:-dev}
NUM_WORKERS=${NUM_WORKERS:-8}
WHISPER_PATH=${WHISPER_PATH:-/data/graphite/whisper/}
BUCKET=${BUCKET:-graphite-archiving-test}
STAMP_FILE=/var/tmp/whisper-backup.success


rm -f ${STAMP_FILE}

whisper-backup --syslog -p $WHISPER_PATH --stampfile=${STAMP_FILE} --storage-path=${ENV}/${REAL_HN}/ -f $NUM_WORKERS  --bucket=$BUCKET backup s3

#/var/tmp/whisper-backup.success

